<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Defacto.MainPage">

    
   <ContentPage.Content>

       <StackLayout

           BackgroundColor="#2c2c2c">
        
        <Frame
            VerticalOptions="Center"  BackgroundColor="#686868">
        </Frame>
    
        <Label
           Margin="7,0,0,0"
           TextColor="white"
           FontAttributes="none"
           FontSize="45"
           Text="DeFacto">
           </Label>

        <SearchBar
           
           FontFamily="Anton"
           BackgroundColor="#2c2c2c"
           Placeholder="Ürün, kategori ya da marka ara"
           CancelButtonColor="White"
           PlaceholderColor="#bdb3bd"
           TextColor="#e9e9e9"
